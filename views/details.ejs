<%- include("./partials/header.ejs") %>
<style>
  body {
    background-color: rgb(32, 31, 31);
    color: white;
  }
  .container1 {
   display: flex;
   justify-content: center;
  }
.img-poster1{
 display: flex;
 justify-content: center;
}
  img#imgpost {
    margin-top: 5%;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    background-repeat: no-repeat;
  }
  #card {
    background-image: linear-gradient(to right top, #051937, #004d7a, #008793);
  }
</style>
<body>
  <div class="container1">
  <div class="col d-flex justify-content-center">
    <div class="container">
      <div class="card mb-3" style="max-width: 1000px" id="card">
        <div class="row g-0">
          <div class="col-lg-auto col-md-auto col-sm-auto">
            <div class="img-poster1">
            <img
              src="<%= details.Poster%> "
              alt="movies poster"
              id="imgpost"
              style="margin-left: 2.5%; margin-right: 2%"
            />
          </div>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h3 class="card-title"><%= details.Title %></h3>
              <p class="card-text"><b>Actor :</b><%= details.Actors %></p>
              <p class="card-text"><b>Released :</b><%= details.Released %></p>
              <p class="card-text"><b>Runtime :</b><%= details.Runtime %></p>
              <p class="card-text"><b>Genre :</b><%= details.Genre %></p>
              <p class="card-text"><b>Released :</b><%= details.Language %></p>
              <p class="card-text"><b>Country :</b><%= details.Country%></p>
              <p class="card-text"><b>Rated:</b><%= details.Rated%></p>
              <p class="card-text"><b>Director :</b><%= details.Director%></p>
              <p class="card-text"><b>Writer :</b><%= details.Writer%></p>
              <p class="card-text"><b>Award :</b><%= details.Award%></p>
              <p class="card-text"><b>Story:</b> <br /><%= details.Plot %></p>
              <p class="card-text">
                <small class="text-muted">Last updated 5 mins ago</small>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
<%- include("./partials/footer.ejs") %>
